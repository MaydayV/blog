// 自定义样式 - 科技感配色

// 主色调 - 科技蓝/紫渐变
$blue-gradient = linear-gradient(135deg, #667eea 0%, #764ba2 100%)
$cyber-blue = #00d4ff
$neon-purple = #9b59b6
$dark-bg = #0a0a0f
$card-bg = rgba(20, 20, 30, 0.8)

// 全局背景 - 深色科技风
body {
  background: linear-gradient(135deg, #0c0c1e 0%, #1a1a2e 50%, #16213e 100%);
  background-attachment: fixed;
}

// 主内容区
.main-inner {
  background: transparent;
}

// 文章卡片 - 玻璃拟态效果
.post-block {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 30px;
  margin-bottom: 30px;
  transition: all 0.3s ease;
  
  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.2);
    border-color: rgba(102, 126, 234, 0.3);
  }
}

// 标题样式
.post-title-link {
  color: #fff !important;
  font-weight: 600;
  
  &:hover {
    color: $cyber-blue !important;
  }
}

// 侧边栏
.sidebar-inner {
  background: rgba(255, 255, 255, 0.02);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

// 导航栏
.header-inner {
  background: rgba(10, 10, 15, 0.9);
  backdrop-filter: blur(20px);
}

// 菜单链接
.menu-item a {
  color: rgba(255, 255, 255, 0.8) !important;
  transition: all 0.3s ease;
  
  &:hover {
    color: $cyber-blue !important;
  }
}

// 标签云 - 霓虹效果
.tag-cloud a {
  color: rgba(255, 255, 255, 0.7) !important;
  transition: all 0.3s ease;
  
  &:hover {
    color: $cyber-blue !important;
    text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
  }
}

// 代码块
figure.highlight, pre {
  background: rgba(0, 0, 0, 0.3) !important;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

// 链接颜色
a {
  color: $cyber-blue;
  
  &:hover {
    color: lighten($cyber-blue, 15%);
  }
}

// 按钮样式
.btn {
  background: $blue-gradient;
  border: none;
  border-radius: 8px;
  color: #fff;
  
  &:hover {
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    transform: translateY(-2px);
  }
}

// 分类/标签页面
.category-list-item, .tag-list-item {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8px;
  padding: 10px 15px;
  margin: 5px 0;
  transition: all 0.3s ease;
  
  &:hover {
    background: rgba(102, 126, 234, 0.1);
  }
}

// 页脚
.footer {
  background: transparent;
  color: rgba(255, 255, 255, 0.5);
}

// 阅读进度条
.reading-progress-bar {
  background: $blue-gradient !important;
}

// 返回顶部按钮
.back-to-top {
  background: $blue-gradient;
  border-radius: 50%;
  
  &:hover {
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.5);
  }
}

// 文章内容
.post-body {
  color: rgba(255, 255, 255, 0.85);
  
  h1, h2, h3, h4, h5, h6 {
    color: #fff;
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  blockquote {
    background: rgba(102, 126, 234, 0.1);
    border-left-color: #667eea;
    color: rgba(255, 255, 255, 0.8);
  }
  
  table {
    th {
      background: rgba(102, 126, 234, 0.2);
    }
    
    td, th {
      border-color: rgba(255, 255, 255, 0.1);
    }
  }
}

// 搜索框
.popup {
  background: rgba(20, 20, 30, 0.95);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.search-input {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: #fff;
  border-radius: 8px;
}

// 分页
.pagination .page-number {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.7);
  
  &:hover, &.current {
    background: $blue-gradient;
    border-color: transparent;
    color: #fff;
  }
}

// 头像动画
.site-author-image {
  border: 3px solid rgba(102, 126, 234, 0.5);
  
  &:hover {
    border-color: $cyber-blue;
    box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
  }
}

// 站点标题
.site-title {
  color: #fff !important;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #00d4ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

// 站点副标题
.site-subtitle {
  color: rgba(255, 255, 255, 0.6) !important;
}

// 社交图标
.links-of-author a {
  color: rgba(255, 255, 255, 0.6) !important;
  transition: all 0.3s ease;
  
  &:hover {
    color: $cyber-blue !important;
    transform: scale(1.2);
  }
}
